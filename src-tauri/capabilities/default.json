{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "settings"
  ],
  "permissions": [
    "core:default",
    "core:menu:default",
    "core:tray:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "autostart:default",
    "opener:default"
  ],
  "scope": {
    "allow": [
      "$HOME/.config/gucli/*"
    ]
  }
}