{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gucli",
  "version": "1.0.0",
  "identifier": "site.jager.gucli",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
        {
          "label": "main",
          "visible": false,
          "decorations": false,
          "transparent": true
        }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb","rpm"],
    "category": "Utility",
    "licenseFile":"../LICENSE",
    "license": "GPL-3.0+",
    "shortDescription": "Gucli - Your personal command line menu",
    "longDescription": "Gucli (from GUI + CLI) is a simple system tray application that turns your frequent console commands into menu items for one-click launching. Get rid of the routine of retyping them.",
    "homepage": "https://github.com/jager1win/gucli",
    "icon": [
      "icons/16x16.png",
      "icons/24x24.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png"
    ],
    "linux": {
      "deb": {
        "files": {},
        "depends": [
        ]
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "depends": [
        ]
      }
    }
  }
}
