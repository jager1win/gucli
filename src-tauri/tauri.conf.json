{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gucli",
  "version": "0.1.0",
  "identifier": "sdfjoisdj490234gucli",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
        {
            "label": "main",
            "visible": false
        }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb","rpm","appimage"],
    "category": "Utility",
    "licenseFile": "../LICENSE",
    "license": "GPLv3",
    "shortDescription": "GUI tray interface for cli commands",
    "longDescription": "Run custom console commands by clicking in the tray",
    "icon": [
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "files": {},
        "depends": []
      },
      "rpm": {
        "epoch": 0,
        "files": {}
      }
    }
  }
}
